{
	"name": "glspc",
	"displayName": "glspc",
	"description": "Generic LSP Client for VS Code",
	"version": "0.0.3",
	"publisher": "torokati44",
	"repository": "https://gitlab.com/torokati44/vscode-glspc",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [],
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Generic LSP Client",
			"properties": {
				"glspc.serverPath": {
					"scope": "window",
					"type": "string",
					"default": "",
					"description": "The file path to the LSP server executable to start."
				}
			}
		},
		"commands": [
			{
				"command": "glspc.restartServer",
				"title": "GLSPC: Restart server"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"vscode-languageclient": "^6.1.3"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.43.0",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"typescript": "^4.0.2"
	}
}
